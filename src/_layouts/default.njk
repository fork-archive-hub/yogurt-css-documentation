<!doctype html>

<html class="logo-visible text-md sm:text-md"
      lang="en">

<head>

  <meta charset="utf-8">

  <meta name="viewport"
        content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <title>
    {{ title }} | {{ site.name }}
  </title>

  <meta name="description"
        content="{% if description %}{{ description }}{% else %}{{ excerpt }}{% endif %}">

  <link rel="stylesheet"
        href="/main.css{{ helpers.assetSuffix }}">

  {% include "meta.njk" %}

  <link rel="icon"
        type="image/svg+xml"
        href="{{ site.images.favicon }}">

  <link rel="canonical"
        href="{{ site.url }}{{ page.url }}">

</head>

<body class="font-default text-gray-900 depth-normal bg-gray-100"
      data-page="{{ id }}">

  {% include "header.njk" %}

  <y class="w-full max-w-screen-xl mx-auto px-6 relative">
    <y class="lg:flex -mx-6">

      {% include "sidebar.njk" %}

      <main class="main py-20 w-full min-h-screen lg:static lg:max-h-full lg:overflow-visible lg:w-3/5">

        <article class="article flex flex-1 flex-col focus:outline-none w-full max-w-6xl ml-auto mr-auto px-6"
                 tabindex="-1">

          {{ content | safe }}

        </article>

        {% include "footer.njk" %}

      </main>

      {% include "extras.njk" %}

    </y>
  </y>

  <script defer src="/main.js{{ helpers.assetSuffix }}"></script>

</body>

</html>
