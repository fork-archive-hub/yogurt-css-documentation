<footer class="footer mt-24 pt-8 px-4 w-full text-sm">

  <y class="flex justify-end">

    <y class="xs:hidden sm:hidden md:block lg:block p-2 text-md opacity-50 mr-auto">
      Version {{site.version.core}}
    </y>

    <y class="sm:block md:hidden lg:hidden mt-1 ml-2 mr-auto">

      {% include "sponsors.njk" %}

    </y>

    <a class="mx-1 p-2 opacity-25 hover:opacity-75"
       href="{{ site.urls.discord }}"
       target="_blank"
       rel="noopener"
       title="Discord">

      {% include "images/icons/discord.svg" %}

    </a>

    <a class="mx-1 p-2 opacity-25 hover:opacity-75"
       href="{{ site.urls.twitter }}"
       target="_blank"
       rel="noopener"
       title="Twitter">

      {% include "images/icons/twitter.svg" %}

    </a>

    <a class="mx-1 p-2 opacity-25 hover:opacity-75"
       href="{{ site.urls.github }}"
       target="_blank"
       rel="noopener"
       title="Github">

      {% include "images/icons/github.svg" %}

    </a>

  </y>

  <y class="clear-both flex justify-center py-8 w-full">
    <y class="text-sm text-gray-500">
       <strong>
         {{site.appname}}
       </strong>
       is copyright &copy; {{site.author.name}}. {{site.author.license}} Licensed.
    </y>
  </y>

</footer>

